    <script type="text/javascript">
        $(document).ready(function () {
            var cookieValue = $.cookie("MenuhederSelected");
            $(cookieValue).removeClass('MenuHeaderNotDisplay');
            $(cookieValue).addClass('MenuHeaderDisplay');

            $(".SelectList-Select2").select2(
                { dir: "rtl", width: '100%' }
            );
            $(".SelectList-Select2-Modal").select2(
                { dir: "rtl", width: '100%', dropdownParent: $('#modal-Edit') }
            );


            $('.persian-datepicker').persianDatepicker({
                format: 'YYYY/MM/DD',
                autoClose: true,
                toolbox: {
                    calendarSwitch: {
                        enabled: false
                    }
                }
            });
            new MutationObserver((mutaionList,observer) => {
                DateMask($("input.date-mask:not(.date-mask-added)"));
            }).observe(document,{childList : true,subtree : true});

        });
        function DateMask(elements){
            $(elements).each((i,item)=>{
                let element = $(item);
                
                if(element.hasClass('date-mask-added')){
                    return true;
                }
                element.addClass('date-mask-added');
                elements.inputmask('shamsi',{placeholder:'----/--/--'})
            })
        }
        /////////////
        function JsonResponseAlert(data) {
          
            console.log('data',data);
            console.log('data.isSuccess',data.isSuccess);
            if (data.isSuccess == false) {
                Swal.fire(
                    {
                        text: data.message,
                        title: "خطا",
                        icon: 'error',
                        confirmButtonColor: '#5156be'
                    }
                )
            }
            else if (data.isSuccess == true) {
                console.log('JsonResponseAlert= true');
                Swal.fire(
